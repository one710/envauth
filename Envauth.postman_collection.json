          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"purchase_code\": \"YOUR_ENVATO_PURCHASE_CODE\",\n    \"item_id\": \"12345678\",\n    \"machine_id\": \"unique-machine-id-12345\"\n}\n",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BaseUrl}}/api/license/verify",
              "host": ["{{BaseUrl}}"],
              "path": ["api", "license", "verify"]
            },
            "description": "Verify an Envato purchase code and activate license bound to a machine ID. Used for apps and tools that generate unique machine IDs. The item_id must be configured in config/envato.php with verification type 'machine_id'."
          },
          "response": []
        },
        {
          "name": "Verify License (IP Address)",
