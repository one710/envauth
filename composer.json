{
  "name": "one710/envauth",
  "description": "License verification server for Envato (CodeCanyon) products with machine ID and IP address binding",
  "type": "project",
  "keywords": [
    "phast",
    "framework",
    "envato",
    "codecanyon",
    "license",
    "verification",
    "activation",
    "oauth",
    "php",
    "psr"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "phastasf/framework": "^1.0.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "vaibhavpandeyvpz/prayog": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "serve": "php console serve",
    "post-install-cmd": [
      "@php -r \"if (!file_exists('config/middleware.php')) copy('vendor/phastasf/framework/config/middleware.php', 'config/middleware.php');\"",
      "@php -r \"if (!file_exists('config/providers.php')) copy('vendor/phastasf/framework/config/providers.php', 'config/providers.php');\""
    ],
    "post-update-cmd": [
      "@php -r \"if (!file_exists('config/middleware.php')) copy('vendor/phastasf/framework/config/middleware.php', 'config/middleware.php');\"",
      "@php -r \"if (!file_exists('config/providers.php')) copy('vendor/phastasf/framework/config/providers.php', 'config/providers.php');\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {}
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
