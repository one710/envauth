# Application
APP_DEBUG=true

# Database
DB_DRIVER=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=envauth
DB_USERNAME=envauth
DB_PASSWORD=envauth
DB_CHARSET=utf8mb4
DB_PREFIX=

# SQLite (alternative to MySQL/PostgreSQL)
# DB_DRIVER=sqlite
# DB_DATABASE=/path/to/database.sqlite

# PostgreSQL (alternative to MySQL)
# DB_DRIVER=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_USERNAME=postgres

# SQL Server (alternative to MySQL)
# DB_DRIVER=sqlsrv
# DB_PORT=1433
# DB_USERNAME=sa
# DB_TRUST_SERVER_CERTIFICATE=false

# Logging
LOG_BACKEND=file
# LOG_BACKEND=stdio
# LOG_BACKEND=daily
LOG_STDIO_STREAM=stdout
LOG_FORMATTER=simple
# LOG_FORMATTER=json

ENVATO_OAUTH_CLIENT_ID=
